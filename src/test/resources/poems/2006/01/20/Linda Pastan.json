{"title":"Love Poem","author":{"name":"Linda Pastan"},"publishDate":"2006-01-20","lines":[{"line":"I want to write you","stanza":1,"number":1},{"line":"a love poem as headlong","stanza":1,"number":2},{"line":"as our creek","stanza":1,"number":3},{"line":"after thaw","stanza":1,"number":4},{"line":"when we stand","stanza":1,"number":5},{"line":"on its dangerous","stanza":1,"number":6},{"line":"banks and watch it carry","stanza":1,"number":7},{"line":"with it every twig","stanza":1,"number":8},{"line":"every dry leaf and branch","stanza":1,"number":9},{"line":"in its path","stanza":1,"number":10},{"line":"every scruple","stanza":1,"number":11},{"line":"when we see it","stanza":1,"number":12},{"line":"so swollen","stanza":1,"number":13},{"line":"with runoff","stanza":1,"number":14},{"line":"that even as we watch","stanza":1,"number":15},{"line":"we must grab","stanza":1,"number":16},{"line":"each other","stanza":1,"number":17},{"line":"and step back","stanza":1,"number":18},{"line":"we must grab each","stanza":1,"number":19},{"line":"other or","stanza":1,"number":20},{"line":"get our shoes","stanza":1,"number":21},{"line":"soaked we must","stanza":1,"number":22},{"line":"grab each other","stanza":1,"number":23}]}